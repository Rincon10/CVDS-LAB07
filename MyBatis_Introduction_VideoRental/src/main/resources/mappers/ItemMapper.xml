<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="edu.eci.cvds.sampleprj.dao.mybatis.mappers.ItemMapper">
    <select id="consultarItems" parameterType="map" resultMap="ItemResult">
        SELECT
                i.id as i_id,
                i.nombre,
                i.descripcion,
                i.fechalanzamiento ,
                i.tarifaxdia ,
                i.formatorenta ,
                i.genero ,

                ti.id AS ti_id ,
                ti.descripcion
                FROM VI_ITEMS AS i
                LEFT JOIN VI_TIPOITEM AS ti ON i.TIPOITEM_id=ti.id;
    </select>
    <select id="consultarItem" resultMap="ItemResult" parameterType="map">
        SELECT
                i.id AS i_id,
                i.nombre,
                i.descripcion,
                i.fechalanzamiento ,
                i.tarifaxdia ,
                i.formatorenta ,
                i.genero ,

                ti.id AS ti_id ,
                ti.descripcion
                FROM VI_ITEMS AS i
                LEFT JOIN VI_TIPOITEM AS ti ON i.TIPOITEM_id=ti.id
                WHERE #{idItem} = i.id;
    </select>

    <insert id="insertarItem" parameterType="map">
        INSERT INTO VI_ITEMS
        VALUES ( #{it.id},#{it.nombre},#{it.descripcion},#{it.fechaLanzamiento},#{it.tarifaxDia},#{it.formatoRenta},#{it.genero},#{item.tipo.id}) ;
    </insert>
    <resultMap id="ItemResult"  type="Item">
        <id property="id" column="i_id"/>
        <result property="nombre" column="nombre"/>
        <result property="descripcion" column="descripcion"/>
        <result property="fechaLanzamiento" column="fechaLanzamiento"/>
        <result property="tarifaxDia" column="tarifaxDia"/>
        <result property="formatoRenta" column="formatoRenta"/>
        <result property="genero" column="genero"/>
        <association property="tipo" javaType="TipoItem" resultMap="edu.eci.cvds.sampleprj.dao.mybatis.mappers.TipoItemMapper.TipoItemResult" columnPrefix="ti_"></association>
    </resultMap>


    
    
</mapper>